                        <InputText id="Breed" type="text" name="@petToEdit.breed" placeholder="Bichon Maltese" autocomplete="breed" @bind-Value="petToEdit.breed" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
