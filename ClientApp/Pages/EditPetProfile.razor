@page "/EditPetProfile/{Id:int}"
@inject IPetController _petController
@inject NavigationManager NavMgr



@if (petToEdit == null)
{
    <p>pet not found</p>
}
else{
<EditForm Model="@petToEdit" OnValidSubmit="@EditPet">
    <DataAnnotationsValidator/> <ValidationSummary/>
    <div class="grid min-h-auto place-items-center bg-pink-100">
        <div class="w-11/12 p-6 mt-6 rounded-lg bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
            <h1 class="text-xl font-semibold">Hello there 👋, <span class="font-normal"> here you can change your pet profile 🐶</span></h1>
            <div class="flex justify-between gap-3">
                     <span class="w-1/2">
                         <label for="Name" class="block text-xs font-semibold text-gray-600 uppercase">Name</label>
                         <InputText name="name" placeholder="Lucky" autocomplete="given-name" @bind-Value="petToEdit.name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
                     </span>
                     <span class="w-1/2">
                         <label class="block text-xs font-semibold text-gray-600 uppercase">Type</label>
                         <InputText name="type" placeholder="Dog" autocomplete="animal-type" @bind-Value="petToEdit.type" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
                     </span>
                 </div>
                 <label class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Breed</label>
                 <InputText type="text" name="breed" placeholder="Bichon Maltese" autocomplete="breed" @bind-Value="petToEdit.breed" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
                 <label class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Description</label>
                 <InputText type="text" name="Description" placeholder="A good boy" autocomplete="Description" @bind-Value="petToEdit.description" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
                 <div class="flex justify-between gap-3">
                     <span class="w-1/3">
                         <label class="block text-xs font-semibold text-gray-600 uppercase">City</label>
                         <InputText name="City" placeholder="Horsens" autocomplete="given-name" @bind-Value="petToEdit.city.name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/>
                     </span>
                     <span class="w-1/3">
                         <label class=" block mt-2 text-xs font-semibold text-gray-600 uppercase">Country</label>
                         <InputSelect  @bind-Value="petToEdit.city.country.name" placeholder="" class="flex-1 pt-5 w-full border-b-2 border-gray-400 focus:border-green-400
                                                                            text-gray-600 placeholder-gray-400
                                                                            outline-none">
                             <option value=""></option>
                             <option value="Denmark">Denmark</option>
                             <option value="Slovakia">Slovakia</option>
                             <option value="test">test</option>
                         </InputSelect>
                     </span>
                     <span class="w-1/3">
                         <label class=" block mt-2 text-xs font-semibold text-gray-600 uppercase">Gender</label>
                         <InputSelect  @bind-Value="petToEdit.gender" placeholder="" class="flex-1 pt-5 w-full border-b-2 border-gray-400 focus:border-green-400
                                                                                                 text-gray-600 placeholder-gray-400
                                                                                                 outline-none">
                             <option value=""></option>
                             <option value="F">Female</option>
                             <option value="M">Male</option>
                             <option value="X">Other</option>
                         </InputSelect>
                     </span>
                     
                 </div>

                    <label for="Type" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">BirthDate</label>
                    <InputDate type="text" name="date" placeholder="xx/xx/xxxx" @bind-Value="petToEdit.birthdate" onclick="this.setAttribute('type', 'date')" class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"/>


                <p for="Status" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Status</p>
                <div class="flex justify-between gap-3">
                    <div class="flex items-center pt-3">
                        <input type="checkbox" @onchange="@((arg) => setWalking(arg))" class="w-4 h-4 text-black bg-gray-300 border-none rounded-md focus:ring-transparent"><label class="block ml-2 text-sm text-gray-900">walking</label>
                    </div>
                    <div class="flex items-center pt-3">
                        <input type="checkbox" @onchange="@((arg) => setFostering(arg))" class="w-4 h-4 text-black bg-gray-300 border-none rounded-md focus:ring-transparent"><label class="block ml-2 text-sm text-gray-900">fostering</label>
                    </div>
                    <div class="flex items-center pt-3">
                        <input type="checkbox"  @onchange="@((arg) => setAdopting(arg))" class="w-4 h-4 text-black bg-gray-300 border-none rounded-md focus:ring-transparent"><label class="block ml-2 text-sm text-gray-900">adopting</label>
                    </div>
                </div>

                 <div>
                     <button type="submit" class=" w-full py-3 mt-6 font-medium tracking-widest text-white uppercase bg-black shadow-lg focus:outline-none hover:bg-green-400 hover:shadow-none">
                         Edit Pet Profile
                     </button>
                 </div>
        </div>
    </div>
</EditForm>

}


