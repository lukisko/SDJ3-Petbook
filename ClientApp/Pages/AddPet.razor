@page "/AddPet"
@inject IPetController _petController
@inject NavigationManager NavMgr

<EditForm Model="@petToAdd" OnValidSubmit="@AddNewPet">
    <DataAnnotationsValidator/> <ValidationSummary/>
<div class="grid min-h-screen place-items-center" style="margin-top: -1rem;">
  <div class="w-11/12 p-3 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12" >
    <h1 class="text-xl font-semibold">Hello there ğŸ‘‹, <span class="font-normal">please fill in your pet information ğŸ¶</span></h1>
    <form class="mt-6">
      <div class="flex justify-between gap-3">
        <span class="w-1/2">
          <label for="Name" class="block text-xs font-semibold text-gray-600 uppercase">Name</label>
          @* <input id="Name" name="name" autocomplete="given-name" type="text" placeholder="Lucky" @bind-Value="petToAdd.name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required/> *@
          <InputText id="Name" name="name" placeholder="Lucky" autocomplete="given-name" @bind-Value="petToAdd.Name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
        </span>
        <span class="w-1/2">
          <label for="Type" class="block text-xs font-semibold text-gray-600 uppercase">Type</label>
        <InputText id="Type" name="type" placeholder="Dog" autocomplete="animal-type" @bind-Value="petToAdd.Type" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
        </span>
      </div>
      <label for="Breed" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Breed</label>
      <InputText id="Breed" type="text" name="breed" placeholder="Bichon Maltese" autocomplete="breed" @bind-Value="petToAdd.Breed" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      <label for="Birthday" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Birth date</label>
      <InputDate id="Birthday" type="date" name="Birthdate" autocomplete="Birthday" @bind-Value="petToAdd.Birthdate" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      <label for="Description" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Description</label>
      <InputText id="Description" name="Description" placeholder="A good boy" autocomplete="Description" @bind-Value="petToAdd.Description" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      <label for="City" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">City</label>
      <InputText id="City"  name="City" placeholder="Varde" autocomplete="City" @bind-Value="petToAdd.City.name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      <label for="Country" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Country</label>
      <InputText id="Country" name="Country" placeholder="Denmark" autocomplete="Country" @bind-Value="petToAdd.City.country.name" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
      
      <p for="Status" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">Status</p>
      <InputSelect @bind-Value="petToAdd.Status">
        <option value="Regular">Regular</option>
        <option value="Adoption">Adoption</option>
        <option value="Fostering">Fostering</option>
        <option value="Walking">Walking</option>
      </InputSelect>
      
      <button type="submit" class="w-full py-3 mt-6 font-medium tracking-widest text-white uppercase bg-pink shadow-lg focus:outline-none hover:bg-pink-900 hover:shadow-none">
        Create Pet Profile
      </button>
    </form>
  </div>
</div>
</EditForm>
