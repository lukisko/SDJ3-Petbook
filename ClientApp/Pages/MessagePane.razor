@page "/MessageView"
@inject IMessageController _messageController


<EditForm Model="@_messageController" OnValidSubmit="@SendMessage">
    <div class="relative min-h-screen flex flex-col sm:justify-center items-center ">
        <div class="absolute sm:max-w-sm w-full">
            <div class="relative w-full rounded-3xl  px-6 py-4 bg-pink-900 hover:scale- ">
                <div class="font-sans text-xl text-black-700 text-center">
                    <div class="block mt-3 mb-10 text-white font-bold text-2xl ">
                        SendMessage
                    </div>
                    <InputText class="text-center mt-5 block w-full border-none bg-gray-50 h-11 rounded-xl shadow-lg hover:bg-pink-300 focus:bg-pink-100    focus:border-white" type="text" placeholder="MessageBody" @bind-Value="_newMessage.MessageBody"></InputText>
                    <DataAnnotationsValidator/> <ValidationSummary/>
                    <div class="text-red-500 text-center">@_errorMessage</div>
                    <div class="flex flex-row">
                        <button class="bg-white w-full py-3 m-7 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" type="submit">Send</button>

                    </div>

                </div>
            </div >
        </div >
    </div>
</EditForm>