@page "/PetProfile"
@inject NavigationManager NavMgr



@*profile pane container*@
<div class="bg-pink-500 mt-12 mx-12 rounded-xl">
    @*profile picture, name, options container,edit button*@
    <div class=" m-3">
        @* profile picture container*@
        <div class="flex inline-block">
            <div class="object-none object-left-top w-xl h-xl mt-6 mx-8">
                <img class="object-cover rounded-full " src="Images/dog.jpg">
            </div>
            @*name container*@
            <div class="grid grid-cols-1 gap-1">
                <label class="">Name 2Name</label>
            
            @*pet options container*@
            <div class="flex inline-block">
                <button class="bg-green-300  py-1 px-1 m-4 rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToAboutPetProfile())">Walking Pet</button>
                <button class="bg-green-300  py-1 px-1 m-7 rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetFollowings())">Foster Pet</button>
                <button class="bg-green-300  py-1 px-1 m-7 rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetGroups())">Adopting Pet</button>
            </div>
            </div>
        </div>
        @*edit button container*@
        <div class=" grid grid-cols-1 gap-1">
            <button class="flex inline-block place-self-end w-auto bg-white  py-1  rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToEditProfile())">
                <svg xmlns="http://www.w3.org/2000/svg" class=" ml-1 mt-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
                <label class=" ml-1 mr-2">Edit Profile</label>
            </button>
        </div>

    </div>
    <hr clas="bg-white px-5 "/>
    @*profile options buttons*@
    <div class="flex inline-block  ">
        <button class=" bg-white w-full py-1 m-7 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetPosts())">Posts</button>
        <button class="bg-white w-full py-1 m-7 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToAboutPetProfile())">About</button>
        <button class="bg-white w-full py-1 m-7 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetFollowings())">Followings</button>
        <button class="bg-white w-full py-1 m-7 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetGroups())">Groups</button>
    </div>
</div>