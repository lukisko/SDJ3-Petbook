@page "/PetProfile"
@inject NavigationManager NavMgr



@*profile pane container*@
<div class="bg-pink-500 mt-12 mx-12 rounded-xl">
    @*profile picture, name, options container,edit button*@
    <div class=" m-3">
        @* profile picture container*@
        <div class="flex inline-block">
            <div class="object-none object-left-top w-s h-s mt-6 mx-8">
                <img class="object-cover rounded-full " src="Images/dog.jpg">
            </div>
            @*name container*@
            <div class="grid grid-cols-1 gap-1 place-items-start h-48" >
                <div class=" ">
                    <label class=" ">Name 2Name</label>
                </div>
                @*pet options container*@
                <div class="h-48 flex flex-wrap content-end ">
                    <button class=" bg-white  p-1 rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToAboutPetProfile())">Walking Pet</button>
                    <button class="bg-white ml-4  p-1 rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetFollowings())">Foster Pet</button>
                    <button class="bg-white ml-4   p-1   rounded-xl   shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetGroups())">Adopting Pet</button>
                </div>
            </div>

        </div>
        @*edit button container*@
        <div class=" grid grid-cols-1 gap-1">
            <button class="flex inline-block place-self-end w-auto bg-white  py-1  rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToEditProfile())">
                <svg xmlns="http://www.w3.org/2000/svg" class=" ml-1 mt-1 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
                <label class=" ml-1 mr-2">Edit Profile</label>
            </button>
        </div>

    </div>
    <hr clas="bg-white max-w-s mx-auto "/>
    @*profile options buttons*@
    <div class="flex inline-block m-3  ">
        <button class=" bg-white py-1 px-2 ml-9 mt-0 mb-6 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetPosts())">Posts</button>
        <button class="bg-white  px-2 ml-4 mt-0 mb-6 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToAboutPetProfile())">About</button>
        <button class="bg-white px-2 ml-4  mt-0  mb-6 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetFollowings())">Followings</button>
        <button class="bg-white  px-2 ml-4 mt-0  mb-6 rounded-xl hover:bg-pink-300  shadow-xl  focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-80" @onclick="@(() => NavigateToPetGroups())">Groups</button>
    </div>
</div>