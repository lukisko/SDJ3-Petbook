@page "/Switch_profile"
@using ClientApp.Model
@inject IPetController _petController
@inject NavigationManager NavMgr

<label  class="mt-1 text-center text-3xl font-bold text-gray-500">Choose a pet profile to be logged in </label>
<ul class="text-center  ">
    @foreach (Pet item in _toShowPetsPetProfiles)
    {
        if (_toShowPetsPetProfiles.Count == 0)
        {
            <li class=" rounded-md ">
                <a class=" block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex flex-row">
                    <label class="mt-1 ml-2 flex-shrink-0"> No pet profiles</label>
                </a>
            </li>
        }
        <li class="  flex flex-row justify-center mt-8 ">
            <a class=" rounded-md px-4 py-2 text-gray-700 hover:bg-gray-200 text-2xl" @onclick="@(() => ProfileLoggedInWith(@item.id))">
                <label class=" "> @item.name</label>
            </a>
        </li>
    }
    <label class="mt-1 text-center text-xl  font-bold text-gray-500 mx-3">Or</label>
    <li>
        <a class="  flex flex-row justify-center  rounded-md px-4 py-2 text-gray-700 hover:bg-gray-200 text-2xl " role="menuitem" tabindex="-1" id="user-menu-item-1" @onclick="(NavigateAddPet)">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-auto ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <label class="ml-2">Add Profile</label>
        </a>
    </li>
</ul>